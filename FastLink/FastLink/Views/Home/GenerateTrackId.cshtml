@{
    ViewData["Title"] = "Generate TrackId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid page-header" style="margin-bottom: 2rem;">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Generate TrackId</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Generate TrackId</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Contact Start -->
<div class="container-fluid overflow-hidden py-5 px-lg-0">
    <div class="container contact-page py-5 px-lg-0">
        <div class="row g-5 mx-lg-0">
            <div class="col-md-8 m-auto contact-form wow fadeIn" data-wow-delay="0.1s">
                <h6 class="text-center text-danger mt-0"> You can start tracking your consignments after two days of generating your TrackId</h6>

                <h1 class="mb-4 text-center mb-5">Generate your Tracking ID</h1>
                <div class="bg-light p-4 mt-3">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Your Name" >
                                    <label>Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Your Email" >
                                    <label>Your Email</label>
                                </div>
                            </div>
                            <div class="col-md-6 mt-3">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="phone" placeholder="Your PhoneNumber">
                                    <label>Your Phonenumber</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="address" placeholder="Your Address">
                                    <label >Your Address</label>
                                </div>
                            </div>
                            <div class="col-md-6 mt-3">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="location" placeholder="Your Current Location">
                                    <label >Your Current Location</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="city" placeholder="Your Current City">
                                    <label >Your Current City</label>
                                </div>
                            </div>
                            <div class="col-md-6 mt-3">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="itemName" placeholder="Your Item/Goods Name">
                                    <label >Your Item Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="itemWeight" placeholder="Your Item Weight (Please Specify)">
                                    <label>Your Item Weight</label>
                                </div>
                            </div>
                            
                            <div class="col-12 mt-3">
                                <button class="btn btn-primary w-100 py-3" type="button" id="submit_btn" onclick="GenerateTrackId()">Generate ID</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->